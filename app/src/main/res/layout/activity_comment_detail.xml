<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".CommentDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblTitleFilmComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="The Northman"
            android:textColor="@color/primaryColor"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblComment"
            android:layout_width="387dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="The Northman é o tipo de filme em que até a lama tem raiva; é um filme visceral cheio de codas para as inescapáveis regiões mais escuras da natureza: animal, elementar e o mais duro de tudo, humano. Todos eles vibram através das paisagens sonoras distorcidas de Eggers e da trilha sonora de Robin Carolan e Sebastian Gainsborough enquanto reverbs ambientais e delays decadentes remontam às origens primordiais. As paisagens de sonho hipnóticas e alucinantes tentam um alcance semelhante: a equipe de efeitos visuais de crack renderiza a árvore genealógica de Amleth, um substituto em constante evolução para a regra divina, como uma samambaia arterial azul brilhante surgindo de seu coração enquanto se conecta ao nosso. É um dos muitos tentáculos mágicos que se entrelaçam e às vezes dão nós, “The Northman”, um filme em que Björk retrata um vidente cego apontando Amleth para uma espada com uma lâmina sem corte e uma sede insaciável de morte."
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblTitleFilmComment" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="By:"
            android:textColor="@color/subTitleColor"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblComment" />

        <TextView
            android:id="@+id/lblNomeComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Kratos"
            android:textColor="@color/subTitleColor"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/lblComment" />

        <TextView
            android:id="@+id/lblDataHoraComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="10/10/2022 23:57"
            android:textColor="@color/subTitleColor"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblComment" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>